extend layout.pug

append head
  link(rel="stylesheet" href="/stylesheets/books.css")
  script(src="/javascripts/add-book.js")


block content
  div.book
    div.container
      img(src=`${book.coverArt}` width="80px" height="100px")
      div.form
        form(action=`/books/${book.id}` method="post")
          select.cryptSelector(name="cryptSelector")
            option Add to Crypt...
            each crypt in crypts
              option(value=crypt.id class="crypt")= crypt.name
      div.button
        button(type="submit" id="crypt-submit") Submit
      div.errors
      div.success
    ul.list(id=`${book.id}`)
      li.title= book.title
      li by #{book.author}
      li= book.synopsis
      li published #{book.publicationDate}

  include footer.pug
